{
  "name": "meta",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf packages/*/dist examples/*.js coverage",
    "common:babel": "lerna exec --prefix -- babel --config-file ../../babel.config.js --ignore '**/__tests__/*','**/__mocks__/*' --delete-dir-on-start src",
    "common:webpack": "webpack --mode production",
    "build:esm": "npm run common:babel -- --out-dir dist/esm",
    "build:cjs": "CJS=yes npm run common:babel -- --out-dir dist/cjs",
    "build:umd": "npm run common:webpack -- --config webpack/dist.js",
    "build:examples": "npm run common:webpack -- --config webpack/examples.js",
    "build:all": "npm run build && npm run build:examples",
    "build": "npm run build:esm && npm run build:cjs && npm run build:umd",
    "lint": "eslint .",
    "test": "jest --config jest.config.js",
    "test:watch": "npm run test -- --watch",
    "test:ci": "CI=yes npm run test",
    "start": "webpack-dev-server --config webpack/dev.js",
    "prepare": "npm run clean && npm run lint && npm run build && npm run test",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.11.5",
    "acorn": "^8.0.3",
    "ajv": "^6.12.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "bufferutil": "^4.0.1",
    "canvas": "^2.6.1",
    "copy-webpack-plugin": "^6.1.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.10.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-react": "^7.21.2",
    "jest": "^26.4.2",
    "jest-enzyme": "^7.1.2",
    "jest-runner-eslint": "^0.10.0",
    "lerna": "^3.22.1",
    "react": "^16.13.1",
    "react-dnd": "^11.1.3",
    "react-dnd-html5-backend": "^11.1.3",
    "react-dnd-test-backend": "^11.1.3",
    "react-dnd-test-utils": "^11.1.3",
    "react-dnd-touch-backend": "^11.1.3",
    "react-dom": "^16.13.1",
    "utf-8-validate": "^5.0.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.4"
  }
}
